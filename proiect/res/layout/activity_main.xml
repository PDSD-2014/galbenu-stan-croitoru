                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/t11"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/t01"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/t10"
                android:background="#0000ff"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/t12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/t02"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/t11"
                android:background="#0000ff"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/t13"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/t03"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/t12"
                android:background="#0000ff"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/t20"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/t10"
                android:layout_margin="2dp"
                android:background="#00ffff"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/t21"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/t11"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/t20"
                android:background="#0000ff"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/t22"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/t12"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/t21"
                android:background="#0000ff"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/t23"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/t13"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/t22"
                android:background="#0000ff"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/t30"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/t20"
                android:layout_margin="2dp"
                android:background="#00ffff"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/t31"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/t21"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/t30"
                android:background="#0000ff"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/t32"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/t22"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/t31"
                android:background="#0000ff"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/t33"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/t23"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/t32"
                android:background="#0000ff"
                android:gravity="center"
                android:text="0" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>